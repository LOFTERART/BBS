<view style="padding: 20rpx 20rpx 0 20rpx;display: flex;flex-direction: row;justify-content: space-between;align-items: center">
    <view style="font-weight: bold" class="f32">
        社区活动
    </view>


    <view class="f22" bindtap="clickMoreActivity">
        更多>
    </view>


</view>
