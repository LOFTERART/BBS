<!--banner S -->
<view class="tui-banner-box">
    <swiper indicator-dots="true" autoplay="true" interval="5000" duration="1000" class="tui-banner-swiper" circular="{{true}}" >
        <swiper-item wx:for="{{banners}}" wx:key="{{index}}" class="tui-banner-item">
            <image
                    bindtap="tapBanner"
                    data-id="{{item.id||item.order_id}}"
                    data-link="{{item.link}}"
                    data-url="{{item.link}}"
                    data-type="{{item.type}}"
                    data-name="{{item.name}}"
                    src="{{item.thumbnails||item.image}}"
                    class="tui-slide-image {{current!=index?'tui-banner-scale':''}}"
                    mode="scaleToFill"  />
        </swiper-item>
    </swiper>
</view>
<!--banner E-->


