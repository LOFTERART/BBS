    <view style="display: flex;flex-direction: row;align-items: center" bindtap="choseCommunity">
        <tui-icon tui-icon-class="location" name="position-fill" color="rgba(18,213,139,1)" size="18"></tui-icon>
        <view class="f36" style="margin-left: 10rpx;margin-right: 2rpx;font-weight: bold">
            {{community}}
        </view>
        <tui-icon name="arrowdown" size="20" color="#323233" style="font-weight: bold"></tui-icon>

    </view>



    <view class="f22">
        第<text style="color: #00cc88">1008</text>位 欢迎您加入我们社区
    </view>

</view>



