
<!--banner-->
<jbj-banner banners="{{banners}}"></jbj-banner>



<view class="King">

    <view class="tui-classify-box" >
        <view class="tui-classify-item" wx:for="{{KING}}" wx:key bindtap="jumpLink" data-name="{{item.name}}" data-src="{{item.link}}">
            <image src="{{item.image}}" class="tui-classify-img" />
            <view class="tui-classify-name">{{item.name}}</view>
        </view>
    </view>

</view>


<!--社区活动S-->

<view class="type-container">
    <scroll-view scroll-x="{{true}}"  class="type-navbar">
        <view  class="van-hairline--surround courseStyle" wx:for="{{hotList}}" wx:key>

            <view style="position: relative">
                <image src="{{item.image}}" style="width: 480rpx;height: 210rpx" />
                <view style="position: absolute;bottom: 0;left: 0;right: 0;background-color: rgba(0,0,0,0.5);color: white;width: 100%;height: 40rpx;line-height: 40rpx;text-align: center" class="f20">
                    {{item.beginTime}}
                </view>

            </view>

            <!--    文字S-->

            <view style="display: flex;flex-direction: column;height: 160rpx;justify-content: space-around;width: 480rpx">
                <view class="f22" style="color: #f17517"> {{item.name}}</view>
                <view class="f20" style="color: #333"> {{item.address}}</view>
                <view class="f20" style="color: #666"> {{item.subName}}</view>
            </view>
            <!--    文字E-->


            <!--    参与S-->

            <view style="display: flex;flex-direction: row;justify-content: space-between;align-items: center;height: 50rpx;width: 480rpx">

                <view class="f20">
                    {{item.memNum}}
                </view>
                <view style="width: 90rpx;height: 40rpx;background-color: #ffc80b;display: flex;flex-direction: column;justify-content: center;align-items: center;border-radius: 45rpx" class="f20">
                    {{item.actionDes}}
                </view>

            </view>



            <!--    参与E-->


        </view>
    </scroll-view>
</view>


<!--社区活动E-->





<!--活动召集 S class="van-hairline--bottom"-->

<block wx:for="{{dynamicList}}" wx:key>
    <view style="padding: 40rpx 20rpx;position: relative"  bindtap="clickDy" data-id="{{item.id}}">


        <!--    基本信息 S-->


        <view style="display: flex;flex-direction: row;height: 180rpx">

            <view style="margin-right: 30rpx">
                <image src="{{item.image}}" style="width: 180rpx;height: 180rpx;border-radius: 10rpx" />
            </view>

            <view style="display: flex;flex-direction: column;justify-content: space-between">

                <view class="f28">
                    {{item.name}}
                </view>
                <view class="f24">
                    {{item.subName}}
                </view>
                <view class="f22">
                    {{item.tags}}
                </view>

            </view>

        </view>


        <!--    基本信息 E-->



        <!--    成员人数信息S-->
        <view style="display: flex;flex-direction: row;justify-content: space-between;align-items: center;margin-top: 30rpx">
            <view class="f22">
                <i class="iconfont icon-tubiaozhizuomoban"></i>
                成员:{{item.memNum}}位   / 价格 <text style="color: red">￥{{item.price}}</text>
            </view>
            <view class="f22">

                <van-tag color="{{item.status.color}}" plain>{{item.status.desc}}</van-tag>
            </view>
        </view>
        <!--    成员人数信息E-->
    </view>
</block>

<!--活动召集 E-->





