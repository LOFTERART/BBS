        </view>
        <tui-icon name="arrowdown" size="18" color="#3E3A39"></tui-icon>

    </view>



    <view class="f22">
        第<text style="color: #00cc88">1008</text>位 欢迎您加入我们社区
    </view>

</view>



<!--默认小区E-->





<!--banner S previous-margin="60rpx" next-margin="60rpx"-->
<view class="tui-banner-box">
    <swiper indicator-dots="true" autoplay="true" interval="5000" duration="1000" class="tui-banner-swiper" circular="{{true}}"  bindchange="change">
        <swiper-item wx:for="{{banners}}" wx:key="{{index}}" class="tui-banner-item">
            <image
                    bindtap="tapBanner"
                    data-id="{{item.id||item.order_id}}"
                    data-link="{{item.link}}"
                    data-url="{{item.link}}"
                    data-type="{{item.type}}"
                    data-name="{{item.name}}"
                    src="{{item.thumbnails||item.image}}"
                    class="tui-slide-image {{current!=index?'tui-banner-scale':''}}"
                    mode="scaleToFill"  />
        </swiper-item>
    </swiper>
</view>
<!--banner E-->



<!--金刚区S-->
<view class="King">

    <view class="tui-classify-box" >
        <view class="tui-classify-item" wx:for="{{KING}}" wx:key bindtap="clickKing" data-name="{{item.name}}" data-src="{{item.link}}" data-type="{{item.type}}">
            <image src="{{item.image}}" class="tui-classify-img" />
            <view class="tui-classify-name">{{item.name}}</view>
        </view>
    </view>

</view>
<!--金刚区E-->


