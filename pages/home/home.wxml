
<!--banner-->
<jbj-banner banners="{{banners}}"></jbj-banner>



<view class="King">

    <view class="tui-classify-box" >
        <view class="tui-classify-item" wx:for="{{KING}}" wx:key bindtap="jumpLink" data-name="{{item.name}}" data-src="{{item.link}}">
            <image src="{{item.image}}" class="tui-classify-img" />
            <view class="tui-classify-name">{{item.name}}</view>
        </view>
    </view>

</view>

<!--活动召集 S-->

<block wx:for="{{dynamicList}}" wx:key>
    <view style="padding: 20rpx;position: relative" class="van-hairline--bottom" bindtap="clickDy" data-id="{{item.id}}">


        <!--    基本信息 S-->


        <view style="display: flex;flex-direction: row;height: 180rpx">

            <view style="margin-right: 30rpx">
                <image src="{{item.image}}" style="width: 180rpx;height: 180rpx;border-radius: 10rpx" />
            </view>

            <view style="display: flex;flex-direction: column;justify-content: space-between">

                <view class="f28">
                    {{item.name}}
                </view>
                <view class="f24">
                    {{item.subName}}
                </view>
                <view class="f22">
                    {{item.tags}}
                </view>

            </view>

        </view>


        <!--    基本信息 E-->



        <!--    成员人数信息S-->
        <view style="display: flex;flex-direction: row;justify-content: space-between;align-items: center;margin-top: 30rpx">
            <view class="f22">
                <i class="iconfont icon-tubiaozhizuomoban"></i>
                成员:{{item.memNum}}位   / 价格 <text style="color: red">￥{{item.price}}</text>
            </view>
            <view class="f22">

                <van-tag color="{{item.status.color}}" plain>{{item.status.desc}}</van-tag>
            </view>
        </view>
        <!--    成员人数信息E-->
    </view>
</block>

<!--活动召集 E-->





