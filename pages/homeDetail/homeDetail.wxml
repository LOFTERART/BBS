                    <tui-icon name="{{collected?'like-fill':'like'}}" color="{{collected?'#ff201f':'#333'}}" size="20" tui-icon-class="tui-icon-collection"></tui-icon>
                    <view class="tui-scale {{collected?'tui-red':''}}">收藏</view>
