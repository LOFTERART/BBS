<view id="store-list">

    <view >

        <view wx:for="{{storeList}}" wx:for-index="idx" wx:key="{{idx}}">
            <view wx:for="{{storeList[idx]}}" wx:key="{{index}}" bindtap="jump" data-id="{{item.id}}">

                <view style="background-color: white;padding:10rpx 20rpx 0  20rpx">

                    <image src="{{item.img}}" mode="widthFix"  style="width: 100%;height: 400rpx;" />

                    <view style="text-align: center;height: 40rpx" class="van-ellipsis f28">
                        {{item.name}}
                    </view>


                    <view style="display: flex;flex-direction: row;justify-content: space-between;align-items: center;height: 60rpx">
                        
                        <block wx:for="{{item.goodInfo}}" wx:key>
                            <view class="f22">{{item}}</view>
                        </block>

                    </view>


                    <view style="display: flex;flex-direction: row;justify-content: space-between;align-items: center;height: 60rpx">
                        <view style="color: #C9A063" class="f28">￥{{item.sell_price}}  <text style="text-decoration: line-through" class="f22">￥{{item.market_price}}</text> </view>
                        <view class="f22">NO:{{item.goods_no}}</view>
                    </view>

                </view>


                <view class="divider"></view>


            </view>
        </view>


    </view>

    <view class="no-data" wx:if="{{!storeList[0].length && init}}">
        暂无数据
    </view>
</view>

