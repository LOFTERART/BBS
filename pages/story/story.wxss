.container{
    padding-bottom: env(safe-area-inset-bottom);
}
.product-list {
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    flex-direction: row;
    flex-wrap: wrap;
    box-sizing: border-box;
    padding: 30rpx 30rpx 0 30rpx;
    background: #fff;
}

.pro-item {
    background: #fff;
    box-sizing: border-box;
    width: 49%;
    position: relative;
    margin-bottom: 2%;
}

.pro-item::after {
    content: '';
    position: absolute;
    height: 200%;
    width: 200%;
    /*border: 1rpx solid #eaeef1;*/
    transform-origin: 0 0;
    -webkit-transform-origin: 0 0;
    -webkit-transform: scale(0.5);
    transform: scale(0.5);
    left: 0;
    top: 0;
}

.pro-img {
    width: 100%;
    display: block;
    border-radius: 10rpx;
}

.pro-content {
    display: flex;
    flex-direction: column;
    /*justify-content: space-between;*/
    box-sizing: border-box;
    background-color: #12d58b;
    padding: 10rpx 0;
    height: 230rpx;
}

.pro-tit {
    color: rgba(63,63,63,1);
    font-size: 26rpx;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.pro-price {
    padding-top: 18rpx;
}

.sale-price {
    font-size: 34rpx;
    font-weight: 500;
    color: #ea1500;
}

.factory-price {
    font-size: 24rpx;
    color: #a0a0a0;
    text-decoration: line-through;
    padding-left: 12rpx;
}

.pro-pay {
    padding-top: 10rpx;
    font-size: 24rpx;
    color: #656565;
}
