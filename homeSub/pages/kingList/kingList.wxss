.tui-rolling-icon {
    margin-right: 12rpx;
}
.tui-animation {
    -webkit-animation: tui-rolling 12s linear infinite;
    animation: tui-rolling 12s linear infinite;
}

@-webkit-keyframes tui-rolling {
    0% {
        transform: translateX(100%);
    }

    100% {
        transform: translateX(-170%);
    }
}

@keyframes tui-rolling {
    0% {
        transform: translateX(100%);
    }

    100% {
        transform: translateX(-170%);
    }
}
.tui-rolling-news {

    margin-top: 100rpx;
    width: 100%;
    padding: 12rpx 20rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: nowrap;
}

.tui-swiper {
    font-size: 28rpx;
    height: 50rpx;
    flex: 1;
}
.tui-swiper-item{
    display: flex;
    align-items: center
}

.tui-news-item {
    line-height: 28rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}




/*notice E*/


.tui-operation {
    width: 100%;
    height: 80rpx;
    background: #12d58b;
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    bottom: 0;
    left: 0;
    padding-bottom: env(safe-area-inset-bottom);
}


.tui-operation::before {
    content: '';
    position: absolute;
    top: 0px;
    right: 0;
    left: 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}
