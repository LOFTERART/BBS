<!--                <view class="tui-operation-text tui-scale-small">分享</view>-->

                <button open-type="share" class='btn1'>
                    <tui-icon name="share" size="15" color='#333' class='btnImg'></tui-icon>
                    <view class="tui-operation-text tui-scale-small">分享</view>
                </button>
            </view>


