<!--package/pages/tousu/tousu.wxml-->

<view style="padding: 20rpx;font-weight: bold;font-size: 44rpx">
    选择您的投诉原因
</view>


<view style="padding: 20rpx;">

    <van-checkbox-group value="{{ result }}" bind:change="onChange">
        <van-cell-group >
            <van-cell
                    wx:for="{{ list }}"
                    wx:key="index"
                    title="{{ item.name }}"
                    clickable
                    data-name="{{ item }}"
                    bind:click="toggle"
            >
                <van-checkbox catch:tap="noop" class="checkboxes-{{ item.id }}" name="{{ item.id }}" checked-color="rgba(45,45,45,1)"/>
            </van-cell>
        </van-cell-group>
    </van-checkbox-group>


</view>



<view style="padding: 20rpx;">
    被投诉状态审核后将会被删除...
</view>





<view class="main" bindtap="clickSubmit">
    <view class="pay" style="background-color: {{changeColor}}">
        谢谢反馈
    </view>
</view>


<van-toast id="van-toast" />