	<view class="container">
		<view class="header">
			<view class="title">网络请求</view>
			<view class="sub-title">Network request，发起网络请求，简单的封装与使用 </view>
		</view>
		<view class="tui-btn-box">
			<view class="tui-btn-btm">
				<tui-button type="white" shape="circle" bind:click="request" data-type="1">带loading请求</tui-button>
			</view>
			<view class="tui-btn-btm">
				<tui-button type="white" shape="circle" bind:click="request" data-type="2">无loading请求</tui-button>
			</view>
		</view>
    <view class="tui-result">
        请求结果：<text class="tui-red">{{result}}</text>
    </view>
	</view>
