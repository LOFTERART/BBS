
<!--状态S-->


<block wx:for="{{articleList}}" wx:key="idx"  wx:for-index="idx" wx:for-item="itemName">

<!--    去掉下边class="van-hairline--bottom"-->

    <view  style="padding: 20rpx 20rpx 0 20rpx;" >
        <!--头像基本信息-->
        <view style="display: flex;flex-direction: row;background-color: white;height: 80rpx;margin-bottom: 10rpx;justify-content: space-between;align-items: center" >

            <view style="display: flex;flex-direction: row">

                <view style="margin-right: 20rpx" bindtap="clickAva" data-name="{{itemName.name}}">
                    <image mode="widthFix"  src="{{itemName.avatar}}" class="slide-image" style="width: 80rpx;height: 80rpx;border-radius: 40rpx"/>
                </view>

                <view style="display: flex;flex-direction: column;justify-content: space-around;">
                    <view style="display: flex;flex-direction: row;justify-content: space-between;align-items: center">
                        <view class="f28" bindtap="clickName">{{itemName.name}}</view>
                        <view style="margin-left: 10rpx;margin-right: 10rpx" class="f28" bindtap="clickName">{{itemName.status}}</view>
                        <view style="margin-right: 10rpx" class="f28" bindtap="clickName">{{itemName.community}}</view>
                        <tui-icon name="member" size="22" color="#12d58b" bindtap="clickVip" data-auth="{{itemName.Auth}}" wx:if="{{itemName.specialist}}"></tui-icon>
                    </view>
                    <view class="f22">{{itemName.timer}}·<text style="color: #12d58b" class="f22">{{itemName.address}}</text></view>
                </view>

            </view>


            <view
                    class="follow"
                    style="background-color: {{itemName.isFollow?'white':'#12d58b'}};color: {{itemName.isFollow?'#12d58b':'white'}};border: {{itemName.isFollow?'0.5rpx solid #12d58b':''}}"
                    wx:if="{{isShowFollow}}"
                    bindtap="clickAction"
                    data-index="{{idx}}"
                    data-id="{{itemName.id}}"
                    data-isFollow="{{itemName.isFollow}}">
                {{itemName.followDes||'关注'}}
            </view>


        </view>

        <!--文字-->

        <view  data-itemArray="{{itemName}}" data-id="{{itemName.id}}" bindtap="clickDailyContent" class="f28 contentStyle">
            {{itemName.content}}
        </view>

        <!--图片九宫格-->
        <view style="display: flex;flex-direction: row;flex-wrap: wrap;">

            <view  wx:for="{{itemName.image_url_came_thumb}}" wx:key="index" style="margin-right: {{(index+1)%3===0?'0':'8rpx'}};">

                <view bindtap="tapBanner"  data-pic="{{articleList[idx].image_url_came[index].url}}"  data-pics="{{itemName.image_url_came}}" data-idx="{{idx}}">
                    <image mode="scaleToFill"  src="{{item.url}}"  style="width: 230rpx;height: 230rpx;border-radius: 10rpx"/>
                </view>

            </view>

        </view>



        <!-- #话题S-->


        <view  class="f22 tag" bindtap="clickTogether" data-tag="{{itemName.tag}}" >
            {{tag || itemName.tag}}
        </view>

        <!-- #话题E-->


    </view>

    <!--    4个功能键-->

    <view class="fourTool">

<!--      去掉下边  van-hairline--right-->
        <view  class="f24  tools" data-id="{{itemName.id}}" bindtap="clickDailyContent" data-itemArray="{{itemName}}">
            <i class="iconfont icon-chakan f28" style="margin-right: 10rpx;color: #969799"></i>{{itemName.views}}
        </view>

        <view  class="f24  tools" data-id="{{itemName.id}}" bindtap="clickDailyContent" data-itemArray="{{itemName}}">
            <i class="iconfont icon-xinxi f28" style="margin-right: 10rpx;color: #969799"></i> {{itemName.comment}}
        </view>

        <view class="f24  tools" bindtap="clickLike" data-index="{{idx}}" data-id="{{itemName.id}}">
            <i class="iconfont icon-zan f28" style="margin-right: 10rpx;color:{{itemName.is_like?'red':'#969799'}}"></i> {{itemName.like}}
        </view>

        <view  class="f24 tools" bindtap="clickMore" data-id="{{itemName.id}}" data-top="{{itemName.is_top}}" data-Uid="{{itemName.follow_user_id}}" data-Utype="{{itemName.follow_user_type}}">
            <i class="iconfont icon-gengduo f28" style="margin-right: 10rpx;color: #969799"></i>
        </view>



    </view>


</block>





