@import "/app.wxss";


.contentStyle{
    margin-bottom: 20rpx;
    margin-top: 20rpx;
    color: #323233;
    font-weight: 500;
    line-height: 50rpx;
}

.avaCon{
    display: flex;flex-direction: row;background-color: white;height: 80rpx;margin-bottom: 10rpx;justify-content: space-between;align-items: center
}

.imgCon{
    display: flex;flex-direction: row;flex-wrap: wrap;
}

.img{
    width: 230rpx;height: 230rpx;border-radius: 10rpx
}

.tag{
    height: 50rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-radius: 50rpx;
    color: white
}

.tagStyle{
    background-color: #12d58b;border-radius: 50rpx;padding: 10rpx
}

.fourTool{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 62rpx;
    background-color: white
}
.tools{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    flex: 1;
    color: #969799 !important;
}



