
.swiper-container{
    position: relative;
    height: 400rpx;
}
.swiper_box {
    height:400rpx;
    border-radius: 10rpx;
}

swiper-item image {
    width: 100%;
    height:400rpx;
}

.swiper-container .dots{
    position: absolute;
    left: 0;
    right: 0;
    bottom: 5rpx;
    display: flex;
    justify-content: center;
}
.swiper-container .dots .dot{
    margin: 0 8rpx;
    width: 7rpx;
    height: 7rpx;
    background: white;
    border-radius: 3.5rpx;
}
.swiper-container .dots .dot.active{
    width: 20rpx;
    height: 7rpx;
    border-radius: 3.5rpx;
}


.tui-banner-item {
    padding: 0;
    box-sizing: border-box;
}



